@import "normalize"
@import "minicss"
//@import "header"
@import "login"
@import "../theme"
//@import "modal"

html, body
  height 100%
  width 100%
  padding 0
  margin 0
  background-color #f2f2f2
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  overflow-y auto
  overflow-x hidden

.box
  box-shadow 0px 3px 1px -2px rgba(0, 0, 0, 0.2), 0px 2px 2px 0px rgba(0, 0, 0, 0.14), 0px 1px 5px 0px rgba(0, 0, 0, 0.12)
  background white
  padding 0.8rem !important
  margin 0 0 0.5rem 0 !important

#loader
  position: absolute;
  left: 50%;
  top: 50%;
  z-index: 1;
  width: 150px;
  height: 150px;
  margin: -75px 0 0 -75px;
  border: 16px solid #f3f3f3;
  border-radius: 50%;
  border-top: 16px solid #3498db;
  width: 120px;
  height: 120px;
  -webkit-animation: spin 2s linear infinite;
  animation: spin 2s linear infinite;

#loader-bg
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0,0,0,.3);
  z-index: 1;
  display: none;

section
  padding: 1.5rem

.outer-most-div {
  padding-bottom: 3em;
}

.log-style {
  margin-bottom:16px;
  border-bottom:1px solid #c2c2c2;
  padding-bottom:0.8em;
}

.objection-message {
  border-bottom: 1px solid #c2c2c2;
  margin-bottom: 16px;
}

.margin-left-200 {
  margin-left: 200px !important;
  transition: 0.3s;
}
.margin-right-200 {
  margin-right: 200px !important;
}
.sidenav-width {
  width: 60px;
  transition: 0.3s
}
.sidenav-hide {
  margin-left:-0px
  transition: 0.3s
}

.header-hide {
  margin-left: 0px
  transition: 0.3s
}

.sidenav {
  height: 100%;
  z-index: 5;
  top: 0;
  left: 0;
}

.overlay {
  position: fixed;
  display: block;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  z-index: 2;
}


@-webkit-keyframes spin
  0%
    -webkit-transform: rotate(0deg);
  100%
    -webkit-transform: rotate(360deg);

@keyframes spin
  0%
    transform: rotate(0deg);
  100%
    transform: rotate(360deg);

@media screen and (min-width: 1024px) {
  .sidenav-width {
    width:0px !important;
  }

  .overlay {
    display: none;
  }
}

@media screen and (max-width: 1023px) {
  .outer-most-div, .navbar > .container{
    margin-left: 0px !important;
    z-index: 100;
  }

  .margin-right-200 {
    margin-right: 0px !important;
  }

  .sidenav-width {
    width:200px !important;
  }

  .overlay {
    display: block;
  }
}
