.header
  width: 100%
  height: 3.5rem
  padding: 0.65em 1.5rem 0 1.5rem
  background: color-primary
  box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.5)
  border-bottom: 5px solid #656565
  z-index: 2
  div
    display: flex
    justify-content: space-between
    .billwise-logo
      line-height: 0
      &:hover
        background-color: transparent
      img
        margin-left: 0.5em
  a
    line-height: 2.3rem
    width: 100%
    padding: 0 1.5rem
    text-align: left
    background: rgba(255,255,255,0)
    color: color-initial
    will-change: background-color
    display: inline-block
    em:before
      margin-right: 0.4em !important
    &:hover
      background-color: rgba(255,255,255,0.2)
    &.brand
      font-size: 1.6rem
      font-weight: bold
  .menu
    font-size: 1.2rem
    display: none
    position: relative
    .company-name
      color: color-logo-orange;
      font-size: 1em;
      font-weight: bold;
      padding-right: 1em
    &.active
      display: block
      a
        display: block
    a
      &.active
        background-color: rgba(255,255,255,0.2)

  .dropdown-content
    display: none
    position: absolute
    background-color: #f9f9f9
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2)
    z-index: 1
    right: 0%
    width: 200px

  .dropdown-content a
    font-size: 1em
    color: black
    text-decoration: none
    display: block

  .dropdown-content a:hover
    background-color: #f1f1f1

  .dropdown
    position: relative
    display: inline-block
    color: white
    border: none

 .dropdown:hover .dropdown-content
    display: block

.username-wrap
  width: 100%
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
  display: inline-block
  height: 35px;

@media (min-width: 40.0rem)
  .header
    display: flex
    justify-content: space-between
    .menu
      display: block
  .header a.hamburger
    display: none
  .header .menu .usermenu
    display: inline !important
  .header .menu .menucompname
    display: inline !important


.nav {
  -webkit-transition: left 0.5s ease;
  -moz-transition: left 0.5s ease;
  -ms-transition: left 0.5s ease;
  -o-transition: left 0.5s ease;
  transition: left 0.5s ease;
  background: rgba(0,0,0, 0.85);
  color: white;
  cursor: pointer;
  font-size: 2rem;
  height: 100vh;
  left: -20rem;
  //padding: 0.2rem 2rem 2rem 2rem;
  position: fixed;
  top: 0;
  width: 18rem;
  z-index: 1;
}

.nav.expanded { left: 0; }

.nav .main-ul {
  position: absolute;
  top: 10.35rem;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
  list-style: none;
  margin: 0;
  padding: 0;
  width: 100%;
}

.nav .sub-menu-ul {
  list-style: none;
  padding: 0;
  margin: 0.1rem 1rem !important;
}

.nav .main-ul li
  font-size: 1.2rem;
  margin-bottom: 0;
  padding: 0 1rem;
  line-height: 2rem;
  &:hover
    background-color: rgba(255,255,255,0.2)

.nav-toggle {
  -webkit-user-select: none;
  -moz-user-select: none;
  user-select: none;
  cursor: pointer;
  height: 2rem;
  //left: 2rem;
  position: relative;
  top: 0rem;
  width: 3.6rem;
  z-index: 2;
}

.nav-toggle:hover { opacity: 0.8; }

.nav-toggle .nav-toggle-bar,  .nav-toggle .nav-toggle-bar::after,  .nav-toggle .nav-toggle-bar::before {
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
  -webkit-transition: all 0.5s ease;
  -moz-transition: all 0.5s ease;
  -ms-transition: all 0.5s ease;
  -o-transition: all 0.5s ease;
  transition: all 0.5s ease;
  background: white;
  content: '';
  height: 0.15rem;
  width: 100%;
}

.nav-toggle .nav-toggle-bar { margin-top: 0; }

.nav-toggle .nav-toggle-bar::after { margin-top: 0.35rem; }

.nav-toggle .nav-toggle-bar::before { margin-top: -0.35rem; }

.nav-toggle.expanded .nav-toggle-bar { background: transparent; }

.nav-toggle.expanded .nav-toggle-bar::after, .nav-toggle.expanded .nav-toggle-bar::before {
  background: white;
  margin-top:0.35rem;
}

.nav-toggle.expanded .nav-toggle-bar::after {
  -ms-transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}

.nav-toggle.expanded .nav-toggle-bar::before {
  -ms-transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
}

.nav-active
  color: #fff;
  background: rgba(255,255,255, 0.5);

#overlay {
  position: fixed;
  display: none;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0);
  z-index: 1;
  cursor: pointer;
}

@media (max-width: 40.0rem)
  body, h7
    font-size: 0.9rem;
  .header .menu
    display: block
  .nav-toggle
    position: absolute;
    top: 0.8rem;

@media (max-width: 18.0rem)
  .header .menu .usermenu
    position: static;
  body, h7
    font-size: 0.85rem
